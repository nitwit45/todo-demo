{
  "name": "hiring-fullstack-todo",
  "version": "1.0.0",
  "private": true,
  "description": "Modern full-stack TODO application with Next.js, Express, and MongoDB",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm --recursive build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start": "pnpm --parallel --filter \"./apps/*\" start",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "release:major": "./scripts/release.sh major",
    "release:minor": "./scripts/release.sh minor",
    "release:patch": "./scripts/release.sh patch",
    "deploy": "./scripts/deploy.sh production",
    "deploy:staging": "./scripts/deploy.sh staging",
    "setup:hooks": "./scripts/setup-hooks.sh",
    "prepare": "command -v git > /dev/null && ./scripts/setup-hooks.sh || echo 'Not a git repo, skipping hooks'"
  },
  "keywords": [
    "todo",
    "fullstack",
    "nextjs",
    "express",
    "mongodb",
    "typescript",
    "monorepo"
  ],
  "devDependencies": {
    "@types/node": "^20.11.5",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

